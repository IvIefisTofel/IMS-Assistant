{
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^5.6 || ^7.0",
        "zendframework/zendframework": "^2.5",
        "doctrine/doctrine-orm-module": "^0.11",
        "neilime/zf2-twb-bundle": "^2.6",
        "rwoverdijk/assetmanager": "^1.6"
    },
    "require-dev": {
        "cgm/zf2-file-upload-examples": "~1"
    },
    "scripts": {
        "pre-update-cmd": [
            "@update-git",
            "\n"
        ],
        "post-install-cmd": [
            "\n", "@clearCache", "\n",
            "bower install", "\n",
            "@compile-mo"
        ],
        "post-update-cmd": [
            "\n", "@clearCache", "\n",
            "@compile-mo"
        ],
        "update-git": "git pull",
        "clearCache": [
            "rm -rf data/cache/*",
            "cp upload/.gitignore data/cache/.gitignore"
        ],
        "compile-mo": "php ./public/index.php compile-mo"
    }
}
