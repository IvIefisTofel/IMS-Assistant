{
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^5.6 || ^7.0",
        "zendframework/zendframework": "^2.5",
        "doctrine/doctrine-orm-module": "^1.0",
        "neilime/zf2-twb-bundle": "^2.6",
        "rwoverdijk/assetmanager": "^1.6"
    },
    "require-dev": {
        "cgm/zf2-file-upload-examples": "~1"
    },
    "scripts": {
        "post-install-cmd": [
            "\n", "@clearCache", "\n",
            "bower install", "\n",
            "@compile-mo"
        ],
        "post-update-cmd": [
            "\n", "@clearCache", "\n",
            "@compile-mo"
        ],
        "clearCache": [
            "find data/cache -mindepth 1 ! -name '.gitignore' -delete",
            "find public/css/core -mindepth 1 ! -name '.gitignore' -delete",
            "find public/js/core -mindepth 1 ! -name '.gitignore' -delete"
        ],
        "compile-mo": "php ./public/index.php compile-mo"
    }
}
